<form action="<%= cat_rental_requests_url %>" method="POST">

  <label>
    Select the cat you wish to rent:
    <select name="cat_rental_request[cat_id]">
      <option disabled selected>Choose one</option>
      <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    Choose starting date:
    <input type="date"  name="cat_rental_request[start_date]">
  </label>

  <label>
    Choose ending date:
    <input type="date"  name="cat_rental_request[end_date]">
  </label>

  <input type="submit" value="Make request">

</form>
